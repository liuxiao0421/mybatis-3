<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.mybatis.example.mapper.UserMapper">
  <select id="getUser" parameterType="int" resultType="org.mybatis.example.pojo.User">
    select lfPartyId,partyName from lfParty where lfPartyId = #{id}
  </select>

  <update id="updateUser" parameterType="int">
    update lfParty set lfPartyId=20000 where id=#{id}
  </update>
</mapper>
